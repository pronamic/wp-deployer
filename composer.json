{
    "name": "pronamic/wp-deployer",
    "description": "WordPress deployer.",
    "authors": [
        {
            "name": "Pronamic",
            "email": "info@pronamic.eu"
        }
    ],
    "autoload": {
        "psr-4": {
            "Pronamic\\Deployer\\": "src/"
        }
    },
    "bin": [
        "bin/wp-deployer"
    ],
    "require": {
        "league/climate": "^3.3",
        "symfony/yaml": "^4.0",
        "deployer/deployer": "^6.2",
        "symfony/filesystem": "^4.2",
        "symfony/console": "^4.0",
        "symfony/process": "^4.0",
        "mustangostang/spyc": "^0.6.2",
        "league/uri": "^5.3"
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "^1.2",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
