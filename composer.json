{
    "name": "pronamic/wp-deployer",
    "description": "WordPress deployer.",
    "authors": [
        {
            "name": "Pronamic",
            "email": "info@pronamic.eu"
        }
    ],
    "autoload": {
        "psr-4": {
            "Pronamic\\Deployer\\": "src/"
        }
    },
    "bin": [
        "bin/wp-deployer"
    ],
    "require": {
        "php": ">=8.0",
        "symfony/console": "^6.0 || ^6.1 || ^6.2",
        "symfony/filesystem": "^6.0 || ^6.1 || ^6.2",
        "symfony/process": "^6.0 || ^6.1 || ^6.2"
    },
    "require-dev": {
        "pronamic/wp-coding-standards": "^1.3",
        "yoast/phpunit-polyfills": "^1.0"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
